{

  "manifest_version": 2,
  "name": "ButWhyMdl",
  "version": "1.0",

  "description": "But why modals? (removes modals)",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "icons": {
    "48": "icons/icon-48.png"
  },

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "But Why Modal?",
    "default_popup": "popup/menu.html"
  },

  "options_ui": {
    "page": "options/settings.html",
    "browser_style": true,
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/butWhyMdl.js"]
    }
  ]

}
