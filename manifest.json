{

  "manifest_version": 2,
  "name": "ButWhyMod",
  "version": "1.0",

  "description": "But why modals? Attempts to remove modal for the webpage. Please be aware that some websites requires modals to work properly.",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "icons": {
    "96": "icons/icon-96.png"
  },

  "browser_action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "But Why Modal?",
    "default_popup": "popup/menu.html"
  },

  "options_ui": {
    "page": "options/settings.html",
    "browser_style": true,
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./content_scripts/butWhyMod.js"]
    }
  ]

}
